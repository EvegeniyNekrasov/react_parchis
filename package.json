{
  "name": "react_parchis",
  "private": true,
  "version": "0.0.0",
  "description": "A React project of popular board game Parchis",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "prepare": "husky",
    "biome:format": "npx @biomejs/biome format --write ./src",
    "biome:lint": "npx @biomejs/biome lint ./src",
    "biome:check": "npx @biomejs/biome check ./src"
  },
  "dependencies": {
    "@phosphor-icons/react": "^2.1.7",
    "animejs": "^3.2.2",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.3.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "styled-components": "^6.1.12",
    "uuidv4": "^6.2.13"
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "@testing-library/jest-dom": "^6.4.8",
    "@testing-library/react": "^16.0.0",
    "@types/animejs": "^3.1.12",
    "@types/jest": "^29.5.12",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.15.0",
    "@typescript-eslint/parser": "^7.15.0",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "@vitest/coverage-v8": "^2.0.4",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "husky": "^9.1.3",
    "identity-obj-proxy": "^3.0.0",
    "jsdom": "^24.1.1",
    "lint-staged": "^15.2.8",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.2",
    "vite": "^5.3.4",
    "vitest": "^2.0.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npx vitest --run"
    }
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs,d.cts,d.mts,json,jsonc}": [
      "biome check --apply --no-errors-on-unmatched"
    ]
  }
}
